extends ../layout

block title
  | #{entry.title}

block content
  .col-xs-8
    h1 #{entry.title}
    p #{entry.body}
    div.meta
      span.text-muted 阅读次数#{entry.meta.exposures}
          |&nbsp;
      span.text-muted 更新于 
          time(datetime="#{entry.updated.toISOString()}")
    a(href="/blog/") 返回
  .col-xs-4
    .panel.panel-default
      .panel-heading 标签
      .panel-body
        each tag in entry.tags
          span.label.label-info= tag