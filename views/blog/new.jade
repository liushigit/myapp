extends ../layout

block title
	| 添加文章

block content
	form(method='post', action='/blog/', role='form')
		div.form-group
			label(for='title') 标题
			input.form-control(id='title', name='blog[title]')
		div.form-group
			label(for='body') 正文
			textarea.form-control(id='body', name='blog[body]')
		input.btn.btn-success(type='submit', value='Save')